# ==========================================
# Docker & Database Configuration
# ==========================================
# Copy this file to .env for local development
# This file is used by docker-compose.yml

# ==========================================
# PostgreSQL Configuration
# ==========================================
POSTGRES_USER=bookstore_user
POSTGRES_PASSWORD=bookstore_pass
POSTGRES_DB=bookstore_db
POSTGRES_PORT=5432

# ==========================================
# pgAdmin Configuration (Optional)
# ==========================================
# Access pgAdmin at http://localhost:5050
PGADMIN_EMAIL=admin@bookstore.local
PGADMIN_PASSWORD=admin
PGADMIN_PORT=5050

# ==========================================
# Redis Configuration (Future)
# ==========================================
REDIS_PORT=6379
REDIS_PASSWORD=redis_pass

# ==========================================
# Development Notes
# ==========================================
# After creating your .env file:
# 1. Start database: npm run db:up
# 2. Access pgAdmin: docker-compose --profile tools up -d pgadmin
# 3. Start development servers: npm run dev
